{
  "permissions": {
    "deny": [
      "Bash(rm:-rf *)",
      "Bash(rm:-rf .)",
      "Bash(sudo:*)",
      "Bash(chmod:777 *)",

      "Bash(git:push --force)",
      "Bash(git:push -f)",
      "Bash(git:reset --hard)"
    ],

    "allow": [
      "Read(./src/**)",
      "Write(./src/**)",
      "Edit(./src/**)",

      "Read(./build.gradle)",
      "Read(./settings.gradle)",
      "Read(**/application.yml)",
      "Read(**/application-dev.yml)",

      "Bash(./gradlew:build)",
      "Bash(./gradlew:test)",
      "Bash(./gradlew:bootRun)",
      "Bash(./gradlew:clean)"
    ]
  }
}
